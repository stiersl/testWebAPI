{
  "Version": "0.0.1",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "HttpsFromPem": {
        "Url": "https://+",
        "Certificate": {
          "Path": "/run/secrets/site.crt",
          "KeyPath": "/run/secrets/site.key"
        }
      }
    }
  }
}